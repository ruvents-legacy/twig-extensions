{
    "name": "ruvents/twig-extensions",
    "description": "RUVENTS Twig Extensions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov@ruvents.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "^1.20||^2.0"
    },
    "require-dev": {
        "symfony/property-access": "^2.8||^3.0",
        "doctrine/inflector": "^1.0",
        "twig/extensions": "^1.4"
    },
    "suggest": {
        "symfony/property-access": "Required for SortByExtension",
        "doctrine/inflector": "Required for TextExtension"
    },
    "autoload": {
        "psr-4": {
            "Ruvents\\TwigExtensions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ruvents\\TwigExtensions\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "5.4"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
